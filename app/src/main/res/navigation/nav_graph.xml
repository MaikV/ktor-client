<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/pagingFragment"
        android:name="com.dorcaapps.android.ktorclient.ui.paging.PagingFragment"
        android:label="PagingFragment"
        tools:layout="@layout/fragment_paging"
        >
        <action
            android:id="@+id/action_pagingFragment_to_detailFragment"
            app:destination="@id/detailImageFragment" />
        <action
            android:id="@+id/action_pagingFragment_to_detailVideoFragment"
            app:destination="@id/detailVideoFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/detailImageFragment"
        android:name="com.dorcaapps.android.ktorclient.ui.detail.DetailImageFragment"
        android:label="DetailImageFragment" />
    <fragment
        android:id="@+id/detailVideoFragment"
        android:name="com.dorcaapps.android.ktorclient.ui.detail.DetailVideoFragment"
        android:label="DetailVideoFragment"
        tools:layout="@layout/fragment_video_detail">
        <argument
            android:name="mediaId"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dorcaapps.android.ktorclient.ui.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_pagingFragment"
            app:destination="@id/pagingFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>